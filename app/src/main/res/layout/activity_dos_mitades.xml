<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DosMitades">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:backgroundTint="#5AE4A8"
        android:gravity="center"
        android:text="Dos Mitades"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="#5AE4A8" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="356dp"
        android:layout_height="47dp"
        android:ems="10"
        android:hint="Ingrese una cadena de carácteres"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.654"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="433dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="246dp"
        android:layout_height="28dp"
        android:layout_marginBottom="20dp"
        android:text="Ingrese una cadena de carácteres"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.218"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="116dp"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:text="Solucionar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText"
        tools:backgroundTint="#5AE4A8"
        tools:textColor="#000000" />

    <TextView
        android:id="@+id/textView3_user"
        android:layout_width="200dp"
        android:layout_height="34dp"
        android:text="Hola alejing@gmail.com"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="98dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="287dp"
        android:layout_height="220dp"
        android:text="Te voy a ayudar a solucionar el problema de las 2 palabras. \n 1.Ingresa una cadena de caracteres que contenga solo 2 palabras separadas por un espacio. \n 2.Imprimiré una nueva cadena con las posiciones de la primera y segunda palabra intercambiadas (la segunda palabra se imprime primero)."
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="141dp" />

    <TextView
        android:id="@+id/fondo_dosmitades"
        android:layout_width="409dp"
        android:layout_height="81dp"
        android:background="#5AE4A8"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="648dp" />

    <ImageView
        android:id="@+id/uno_dosmitades"
        android:layout_width="41dp"
        android:layout_height="37dp"
        app:srcCompat="@drawable/icono1"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="657dp" />

    <ImageView
        android:id="@+id/dos_dosmitades"
        android:layout_width="44dp"
        android:layout_height="38dp"
        app:srcCompat="@drawable/icono2"
        tools:layout_editor_absoluteX="184dp"
        tools:layout_editor_absoluteY="657dp" />

    <ImageView
        android:id="@+id/tres_dosmitades"
        android:layout_width="44dp"
        android:layout_height="43dp"
        app:srcCompat="@drawable/icono3"
        tools:layout_editor_absoluteX="319dp"
        tools:layout_editor_absoluteY="657dp" />

    <TextView
        android:id="@+id/text_dosmitades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dos mitades"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="700dp" />

    <TextView
        android:id="@+id/text_dospalabras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dos palabras"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="164dp"
        tools:layout_editor_absoluteY="700dp" />

    <TextView
        android:id="@+id/text_quiar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quitar fragmento"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="286dp"
        tools:layout_editor_absoluteY="700dp" />
</androidx.constraintlayout.widget.ConstraintLayout>